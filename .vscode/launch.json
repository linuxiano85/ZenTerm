{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "preLaunchTask": "cargo: build app-desktop",
            "program": "${workspaceFolder}/target/debug/zenterm",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Game",
            "preLaunchTask": "godot-rust: Build Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${config:godot-rust.environment.godotEditorPath}",
            "cwd": "${config:godot-rust.environment.godotProjectPath}",
            "presentation": {
                "group": "Debug",
                "order": 1
            }
        },
        {
            "name": "Release Game",
            "preLaunchTask": "godot-rust: Build Release",
            "type": "lldb",
            "request": "launch",
            "program": "${config:godot-rust.environment.godotEditorPath}",
            "cwd": "${config:godot-rust.environment.godotProjectPath}",
            "presentation": {
                "group": "Debug",
                "order": 2
            }
        },
        {
            "name": "Attach to Game",
            "pid": "${command:pickMyProcess}",
            "type": "lldb",
            "request": "attach",
            "program": "${config:godot-rust.environment.godotEditorPath}",
            "presentation": {
                "group": "Debug",
                "order": 3
            }
        }
    ]
}